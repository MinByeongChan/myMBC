<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg2">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textColor="#000000" />

            <EditText
                android:inputType="textPersonName"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="NAME"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/nameText"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"/>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="7dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|left"
                    android:text="유치원"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/kinder"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:padding="3dp" />
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|left"
                    android:text="정류장"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/station"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:padding="3dp" />
                />

            </LinearLayout>

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/idText"
                    android:textColor="#000000"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="ID"
                    android:padding="5dp"
                    android:background="@drawable/border"
                    />


                <Button
                    android:id="@+id/validateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/bg"
                    android:text="Check ID"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>



            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textColor="#000000"/>

            <EditText
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="PASSWORD"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/passwordText"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"/>

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="CHECK PASSWORD"
                android:textColor="#000000" />


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/checkpasswordText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border"
                    android:hint="CHECK PASSWORD"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/setImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="PHONE"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/phoneText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:hint="Phone Number"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/emailText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:hint="E-mail"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="#000000"
                />


            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/genderWoman"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:checked="true"
                    android:text="female"
                    android:textColor="#000000"
                    />


                <RadioButton
                    android:id="@+id/genderMan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="male"
                    android:textColor="#000000"
                    />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/state"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">




                <RadioButton
                    android:id="@+id/stateParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:checked="true"
                    android:text="학부모"
                    android:textColor="#000000"
                    />

                <RadioButton
                    android:id="@+id/stateKinder"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="유치원관계자"
                    android:textColor="#000000"
                    />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/codeLayout"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|left"
                    android:text="유치원 코드"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/codeEdt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="0.7"
                    android:background="@drawable/border"
                    android:hint="CODE"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="#000000" />

            </LinearLayout>
            <Button
                android:id="@+id/registerButton"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/bg"
                android:text="Register"
                android:textColor="#000000"
                android:textSize="20dp" />


        </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_weight="0.4">-->


    <!--</LinearLayout>-->

</LinearLayout>

